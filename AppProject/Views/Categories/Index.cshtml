@model IEnumerable<AppProject.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<ul class="nav">
    @foreach (var Category in Model)
    {
        <li class="Department">
            <a id="@Category.Id" class="DepartmentLink" href="#">
                @Category.Name
            </a>

            <ul class="Component">
                @foreach (var SubCategory in Category.SubCategories)
                {
                    <li class="ComponentItem"><a class="Text" id="@SubCategory.Id">@SubCategory.SubName</a></li>
                }

            </ul>

        </li>
    }

</ul>

<form id="myform" asp-action="Search" asp-controller="Productes">
    <input type="text" name="name" id="name" placeholder="Search..">
</form>

@section Scripts{
    <script src="~/js/site.js"></script>
}

