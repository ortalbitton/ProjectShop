@model IEnumerable<AppProject.ViewModel.ColorSizeProductVM>

@{
    ViewData["Title"] = "Search";
}


@foreach (var Product in Model)
{

    <div class="col-md-3">
        <div class="product-item">
            <img src="~/imagesweb/@Product.ImgId" alt="" />

            <div class="product-info">
                <a asp-controller="Productes" asp-action="Details" asp-route-id="@Product.Id">@Product.ProductName</a>
                <h6>@Product.Price</h6>
                <a href="#" class="site-btn btn-line">Add TO Mart</a>
            </div>
        </div>
    </div>
}
