@model AppProject.Models.Customer

@{
    ViewData["Title"] = "LogIn";
}


<h2>Create</h2>

<form asp-action="LogIn">
    <div class="form-horizontal">
        <h4>Customer</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="Mail" class="text-black"> Email <span asp-validation-for="Mail" class="text-danger">*</span></label>
                <input asp-for="Mail" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <label asp-for="Password" class="text-black"> Password  <span asp-validation-for="Password" class="text-danger"></span></label>
                <input asp-for="Password" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Countinue" />
            </div>
        </div>
    </div>

    @if (ViewBag.Fail)
    {
        <div>Login failed. Please try again.</div>
    }

</form>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Shop</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
